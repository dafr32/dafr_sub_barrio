{% if style == "left" %}
	{% set txt_order = 'order-1' %}
	{% set images_order = 'order-2' %}
	{% set margin = 'left' %}
	{% set img2_margin = 'ms-auto' %}
{% else %}
	{% set txt_order = 'order-2' %}
	{% set images_order = 'order-1' %}
	{% set margin = 'left' %}
	{% set img2_margin = 'ms-auto' %}
{% endif %}

<div {{ attributes.addClass('images-parallax my-5') }}>	
	<div class="row">
		<div class="col-lg-6 col-12 {{images_order}}">
			<div class="images-inner">
				{% if sticker.0 in not empty %}			
					<div class="sticker-box" style="{{margin}}:35px">
						<div class="content-box-inner">{{sticker}}</div>
					</div>
				{% endif %}
				<div class="image-1 rellax" style="{{margin}}:0" data-rellax-speed="1"> {% block image1 %}{% endblock %}	</div>
				<div class="image-2 {{img2_margin}} rellax" data-rellax-speed="0"> {% block image2 %}{% endblock %}</div>
			</div>			
		</div>
		<div class="col-lg-6 col-12 {{txt_order}}">
			<div class="parallax_content d-flex align-items-{{content_valign}} justify-content-{{content_align}}">
				<div class="content-inner {{blenda}}">
					<h4 class="sub-title" {{animation_s}} {{animation_dur}} data-aos-delay={{delay}}>{{subtitle}}</h4>
					{# {% set delay = animation_del * 2 %} #}
					<h1 class="title" style="color:{{text_color}} !important" {{animation_s}} {{animation_dur}} data-aos-delay={{delay}}>
					{{ title.0['#markup']|raw }} <span>{{title_span.0['#markup']|raw }}</span> {{ title2.0['#markup']|raw  }}</h1>
					{# {% set delay = animation_del * 3 %} #}
					<div class="content"  {{animation_s}} {{animation_dur}} data-aos-delay={{delay}}>
						{% block content %}{% endblock %}
					</div>								
				</div>
			</div>
		</div>
	</div>	
</div>


